{
	"compilerOptions": {
		"target": "ES2021",
		"module": "CommonJS",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"typeRoots": ["./node_modules/@types", "./src/types"]
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
